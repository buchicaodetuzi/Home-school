/* messagelist-template/messagelist-template.wxss */
.messagedetail{
  margin-bottom: 30rpx;
  width: 675rpx;
  height: 200rpx;
  border-radius: 5px;
  border: 1px solid gray;
}

.messagedetail-img{
  width: 120rpx;
  height: 120rpx;
  float: left;
  margin: 10rpx 0 0 10rpx;
}

.arrow-img{
  margin: 45rpx 20rpx 0 0;
  float: right;
  width: 50rpx;
  height: 50rpx;
}

.top-right{
  display: flex;
  flex-direction: column;
}

.title{
  margin: 20rpx 0 0 10rpx;
  font-size: 30rpx;
}

.brief-message{
  margin: 15rpx 0 0 10rpx;
  color:gray; 
  font-size: 30rpx;
}

.separate{
  margin: 10rpx 0 0 5%;
  float: left;
  width: 90%;
  height: 2rpx;
  background-color: #eceded;
}

.date{
  margin: 5rpx 0 0 5%;
  float: left;
  color:gray;  
  font-size: 30rpx;
}

.read{
  margin: 5rpx 5% 0 0;
  float: right;
  font-size: 15px;
  color:black;  
}