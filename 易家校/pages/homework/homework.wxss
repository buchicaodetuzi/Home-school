.column {
  display: flex;
  flex-direction: column;
}

.row {
  display: flex;
  flex-direction: row;
}

.successful {
  margin-left: 505rpx;
  width: 100rpx;
  height: 80rpx;
  border-radius: 5px;
  text-align: center;
}

.complete {
  float: right;
  font-size: 40rpx;
  line-height: 80rpx;
  color: rgb(8, 243, 8);
}

.title {
  margin-left: 10rpx;
  font-size: 40rpx;
  line-height: 80rpx;
}

page {
  background: #f3f7f7;
}

.select_box {
  margin-left: 120rpx;
  margin-top: 10rpx;
  position: absolute;
  z-index: 100;
  background: #fff;
  width: 300rpx;
}

.select {
  box-sizing: border-box;
  width: 100%;
  height: 70rpx;
  border: 1px solid #efefef;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.select_text {
  font-size: 30rpx;
  flex: 1;
}

.select_img {
  width: 20rpx;
  height: 20rpx;
  display: block;
  transition: transform 0.3s;
}

.select_img_rotate {
  transform: rotate(180deg);
}

.option_box {
  position: absolute;
  top: 70rpx;
  width: 100%;
  border: 1px solid #efefef;
  box-sizing: border-box;
  overflow-y: auto;
  background: #fff;
  transition: height 0.3s;
}

.option {
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
}

.create-title {
  margin-left: 10rpx;
}

.input {
  background-color: white;
  width: 100%;
  height: 1115rpx;
  margin-top: 10rpx;
}
